{
  "name": "fusion-test",
  "version": "1.0.0",
  "description": "Interview Test Repository for Fusion Backend Position",
  "main": "server.js",
  "author": "Oluwatunmise Olatunbosun",
  "license": "MIT",
  "scripts": {
    "pre:build": "rimraf ./dist",
    "lint": "eslint . --ext .ts",
    "copy-files": "copyfiles -u 2 src/assets/* dist/assets/",
    "build": "yarn run pre:build && yarn tsc -p ./tsconfig.build.json",
    "postbuild": "yarn run copy-files",
    "orm-cli": "npx typeorm-ts-node-commonjs",
    "migration:generate": "yarn run orm-cli migration:generate -d ./src/db/data-source.ts",
    "migration:run": "yarn run orm-cli migration:run -d ./src/db/data-source.ts",
    "seed": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed --configName=src/ormconfig.ts",
    "start": "nodemon ./src/server.ts",
    "test": "cross-env NODE_ENV=test yarn jest --clearCache && jest --verbose --runInBand",
    "production": "node dist/server.js"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^28.1.3",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/mysql": "^2.15.21",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "@withshepherd/faker": "^5.5.5",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.18.0",
    "jest": "^28.1.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.16",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.3",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@types/faker": "^6.6.9",
    "@types/node": "^17.0.25",
    "@types/supertest": "^2.0.12",
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "helmet": "^5.1.0",
    "http-status-codes": "^2.2.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.3.3",
    "ts-jest": "^28.0.5",
    "typeorm": "^0.3.6",
    "typeorm-seeding": "^1.6.1"
  }
}
